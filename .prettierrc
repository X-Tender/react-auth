{
	"printWidth": 100,
	"tabWidth": 2,
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "es5",
	"arrowParens": "avoid",
	"bracketSpacing": true,
	"semi": true,
	"parser": "babel",
	"overrides": [
		{
			"files": [".prettierrc", ".eslintrc"],
			"options": {
				"parser": "json",
				"printWidth": 80
			}
		},
		{
			"files": ["*.scss"],
			"options": {
				"parser": "scss",
				"printWidth": 99999
			}
		},
		{
			"files": ["*.json"],
			"options": {
				"parser": "json",
				"printWidth": 99999
			}
		},
		{
			"files": ["package.json"],
			"options": {
				"parser": "json",
				"printWidth": 30
			}
		},
		{
			"files": ["*.yaml"],
			"options": {
				"parser": "yaml"
			}
		}
	]
}
